{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build and Run Tests",
      "type": "shell",
      "command": "cmake --build .",
      "options": {
        "cwd": "${workspaceFolder}/build"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": {
        "base": "$gcc",
        "fileLocation": [
          "relative",
          "${workspaceFolder}/build"
        ]
      }
    }
  ]
}
