{
  "name": "C++ Text Editor",
  "dockerComposeFile": "../docker-compose.yml",
  "service": "editor",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.cpptools-extension-pack",
        "phind.phind",
        "Codeium.codeium",
        "vscodevim.vim",
        "hediet.vscode-drawio"
      ]
    }
  },
  "postCreateCommand": "git config --global --add safe.directory /workspace",
  "remoteUser": "root",
  "overrideCommand": true,
  "workspaceFolder": "/workspace"
}
